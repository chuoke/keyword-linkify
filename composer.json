{
    "name": "chuoke/keyword-linkify",
    "description": "Replace keywords in articles with links",
    "keywords": [
        "chuoke",
        "keyword-linkify",
        "关键词替换为链接"
    ],
    "homepage": "https://github.com/chuoke/keyword-linkify",
    "license": "MIT",
    "authors": [
        {
            "name": "chuoke",
            "email": "chuokechungyoung@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Chuoke\\KeywordLinkify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuoke\\KeywordLinkify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
